<!DOCTYPE HTML>
<html>
<head>
    <title>Constant Contact API v2 OAuth2 Example</title>
    <!--<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.min.css" rel="stylesheet">-->
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
    <script>
    function parseHash() {
    	return window.location.hash.slice(1).split('&').reduce(function(obj, segment) {
    		segment = segment.split('=');
    		obj[segment[0]] = segment[1];
    		return obj;
    	}, {});
    }
    $(function() {
    	if (window.location.hash) {
    		var hashParams = parseHash();
    		$('.success-pre').text('token: '+hashParams.access_token);
    	}
    });
    </script>
</head>
<body>
<div class="well">
    <h3>OAuth 2 Authorization Example</h3>

    <span class="label label-success">Got access token!</span>
    <div class="container alert-success">
        <pre class="success-pre">
        </pre>
    </div>

</div>

</body>
</html>